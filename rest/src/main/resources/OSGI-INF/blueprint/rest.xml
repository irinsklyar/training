<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <cxf:bus id="cxfBus1">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>


    <jaxrs:server address="/karafsimple" id="someRestService">
        <jaxrs:serviceBeans>
            <ref component-id="restServiceImpl"/>
        </jaxrs:serviceBeans>

        <jaxrs:providers>
            <bean class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>
        </jaxrs:providers>

    </jaxrs:server>
    <service ref="restServiceImpl" interface="com.training.service.WeatherService"/>

    <bean id="restServiceImpl" class="com.training.service.WeatherServiceImpl">
        <argument ref="processBean"/>  <!--Points to the reference below -->
    </bean>

    <service ref="processBean" interface="com.training.process.WeatherProcess"/>
    <bean id="processBean" class="com.training.process.WeatherProcessImpl">
        <property name="connToApi" ref="connToApi"/>
    </bean>
    <bean id="connToApi" class="com.training.process.FetchWeatherProcess"/>

</blueprint>



